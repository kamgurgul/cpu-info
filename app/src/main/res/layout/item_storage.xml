<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/storage_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        style="@style/TextBody2"
        android:textStyle="bold"
        tools:text="Internal: 1.3GB / 4GB" />

    <com.kgurgul.cpuinfo.widgets.progress.IconRoundCornerProgressBar
        android:id="@+id/storage_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:rcBackgroundColor="@color/progressBackground"
        app:rcBackgroundPadding="5dp"
        app:rcIconPadding="10dp"
        app:rcIconSize="40dp"
        app:rcIconSrc="@drawable/root"
        app:rcMax="100.0"
        app:rcProgressColor="@color/accent"
        app:rcRadius="10dp" />

</LinearLayout>